{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
    <div>
        <h1 class="titre1">Sortir.Com</h1>
        <nav class="navbar">
            <ul>
                <li><a href="{{ path('main_home') }}">Accueil</a></li>
                <li><a href="{{ path('user_profil') }}">Mon profil</a></li>
                <li><a href="{{ path('app_logout') }}">Se d√©connecter</a></li>
            </ul>
        </nav>
    </div>
    <div class="maSortie">
        {{ form_start(creationSortieForm) }}

        <table name="tableModifierSortie">
            <tr>
                <td> {{ form_row(creationSortieForm.nom) }}  </td>
                <td> {{ form_row(creationSortieForm.campus) }}  </td>
            </tr>
            <tr>
                <td>   {{form_row(creationSortieForm.dateHeureDebut) }}  </td>
                <td> {{ form_row(creationSortieForm.villes) }}  </td>
            </tr>
            <tr>
                <td> {{ form_row(creationSortieForm.dateLimiteInscription) }}  </td>
                <td> {{ form_row(creationSortieForm.lieu) }}  </td>

            </tr>
            <tr>
                <td> {{ form_row(creationSortieForm.nbInscriptionsMax) }}  </td>
                <td> <div class="modifierSortieTd0"> <div>  Rue :</div> <div> </div> </div> </td>

            </tr>
            <tr>
                <td> {{ form_row(creationSortieForm.duree) }}  </td>
                <td> <div class="modifierSortieTd1"> <div>  Code Postal :</div> <div> </div> </div> </td>

            </tr>
            <tr>
                <td rowspan="2"> {{ form_row(creationSortieForm.infosSortie) }}  </td>
                <td> {{ form_row(creationSortieForm.latitude) }} </td>
            <tr>
                <td> {{ form_row(creationSortieForm.longitude) }}   </td>
            </tr>

            <tr>
                <td colspan="2">
                    <div class="modifierSortieBtn" >
                        {{ form_row(creationSortieForm.enregistrer)}}
                        {{ form_row(creationSortieForm.publier)}}
                        <div class="modifierSortieBtn">
                            <button class="profilValidationBtn"> <a class="profilValidationA" href="{{ path('main_home') }}">Annuler</a> </button>
                        </div>

                    </div>
                </td>
            </tr>

        </table>
        {{ form_end(creationSortieForm) }}
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $('.js-datepicker').datepicker({
            format:'yyyy.MM.dd'
        });
        $('.datetimepicker').datetimepicker({
            format: 'YYYY-MM-DD hh:mm:ss'
        });

    </script>

{% endblock %}

